<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/supercharger</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">P4ssw0rd!</property>

        <!-- Select our SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Echo the SQL to stdout -->
        <property name="hibernate.show_sql">true</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Names the annotated entity classes -->
        <mapping class="com.msebastiao.sap.model.Actividad"/>
        <mapping class="com.msebastiao.sap.model.FichaMecanica"/>
        <mapping class="com.msebastiao.sap.model.Informe"/>
        <mapping class="com.msebastiao.sap.model.Mecanico"/>
        <mapping class="com.msebastiao.sap.model.Repuesto"/>
        <mapping class="com.msebastiao.sap.model.TitularVehiculo"/>
        <mapping class="com.msebastiao.sap.model.Turno"/>
        <mapping class="com.msebastiao.sap.model.Vehiculo"/>
    </session-factory>
</hibernate-configuration>
